{% extends 'base.html.twig' %}

{% block title %}Association Lamp - Evenements{% endblock %}


{% block body %}
<div class="container-fluid">
 <h1 class="text-center mt-4"> Evenements</h1>
<div class="row my-5">
{% for event in events %}
<div class="col-md-4 event">
<h2>{{ event.title}}</h2>  
<div class="date ">
<div class="dateRight">
<div id="number">{{event.day}}</div>
<div id="dateText">
<div id="mois">{{event.month}}</div>    
<div id="anee">{{event.year}}</div>
</div> 
</div>
</div>  

<img src="{{ asset('images/events/' ~ event.imageName)}}" alt="{{ event.title}}" class="img-fluid mx-auto d-block" height="100px">
<p>{{ event.description}}</p>
</div>
    {% endfor %}
</div>
</div>

<a href="{{ path('app_home')}}"><img src="{{ asset('images/back.png')}}" alt="retour Ã  la page d'accueil" class=" arrow-return img-fluid mx-auto d-block my-4" height="30px"></a>
{% endblock %}
