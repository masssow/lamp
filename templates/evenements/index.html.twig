{% extends 'base.html.twig' %}

{% block title %}Association Lamp - Evenements{% endblock %}


{% block body %}
<div class="container-fluid">
<div class="header-custom hc-evenements">
</div>
<h2 class="titre-prin-pag"> Evenements</h2>

<div class="row my-5">
{% for event in events %}
<div class="col-lg-4 event">
<h2 class="titre-event">{{ event.title}}</h2>  
<div class="date">
<div class="dateRight">
<div id="number">{{event.day}}</div>
<div id="dateText">
<div id="mois">{{event.month}}</div>    
<div id="anee">{{event.year}}</div>
</div> 
</div>
</div>  

<img src="{{ asset('images/events/' ~ event.imageName)}}" alt="{{ event.title}}" class="img-fluid mx-auto d-block" height="100px">
<p class="para-present">{{ event.description}}</p>
</div>
    {% endfor %}
</div>
</div>

{% endblock %}
